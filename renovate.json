{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": false,
      "commitMessageTopic": "Docker image updates",
      "description": "Updates Docker base images to fix vulnerabilities",
      "labels": [
        "security",
        "critical"
      ]
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "enabled": true,
      "versioning": "major",
      "commitMessageTopic": "Node.js image updates",
      "description": "Recommends major patching for Node.js images when CVEs are detected"
    }
  ]
}
