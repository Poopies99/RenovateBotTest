{
  "extends": ["config:base"],
  "docker": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "automerge": false,
      "commitMessageTopic": "Docker image updates",
      "description": "Updates Docker base images to fix vulnerabilities",
      "labels": ["security", "critical"]
    }
  ]
}
